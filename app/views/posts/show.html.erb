
<div class="title">
  <h3>Post</h3>
  <div id="post-info">
    <table>
      <tr>
        <th>User Name</th>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
      <tr>
        <td><%= @post.user.name %></td>
        <td><%= @post.title %></td>
        <td><%= @post.body %></td>
        <td>
          <button class="edit-button"><%= link_to  "Edit", edit_post_path %></button>
          <button class="delete-button"><%= link_to  "Delete", post_path, data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"} %></button>
        </td>
      </tr>
    </table>
  </div>
</div>
