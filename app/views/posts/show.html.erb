<div class="title">
  <h3>Post</h3>
  <div id="post-info">
    <table>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Body</th>
      </tr>
      <tr>
        <td><%= User.find(@post.user_id).name %></td>
        <td><%= @post.title %></td>
        <td><%= @post.body %></td>
      </tr>
    </table>

    <a href=<%= new_course_post_comment_path(course_id: @course.id, post_id: @post.id)%>> New comment </a>

    <% if @comments.length() < 1 %>
      <h2>No comments yet! </h2>
    <% else %>

      <table>
        <tr>
          <th>User</th>
          <th>Comment</th>
        </tr>

          <% @comments.each do |comment|%>
              <tr>
            <td><%= User.find(comment.user_id).name %></td>
            <td><%= comment.body %></td>
            <td>
              <ul>
              <li class="nav-link"><%= link_to "Edit", edit_course_post_comment_path(@course,@post,comment) %></li>
              <li class="nav-link"><%= link_to "Delete", course_post_comment_path(@course,@post,comment), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %></li>
              </ul>
              </td>
            </tr>

          <% end %>
      </table>
    <% end%>
  </div>
</div>
